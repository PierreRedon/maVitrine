RewriteEngine On

# ğŸ”’ Redirection vers HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ğŸŒ Redirection www vers sans-www pour .com
RewriteCond %{HTTP_HOST} ^www\.pierre-redon\.com$ [NC]
